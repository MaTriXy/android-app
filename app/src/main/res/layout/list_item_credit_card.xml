<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/gap_large"
    android:layout_marginBottom="@dimen/gap_large">

    <ImageView
        android:id="@+id/imageview_cc_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <TextView
        style="@style/TextStyle.CreditCard"
        android:id="@+id/textview_cc_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_small"
        android:layout_toRightOf="@id/imageview_cc_image"
        android:layout_centerVertical="true"
        android:singleLine="true" />

    <TextView
        style="@style/TextStyle.CreditCard"
        android:id="@+id/textview_cc_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_small"
        android:layout_toRightOf="@id/textview_cc_type"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/container_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/textview_expired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/gap_smaller"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_error" />

        <ImageButton
            android:id="@+id/button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:src="@android:drawable/ic_delete" />

    </LinearLayout>

</RelativeLayout>