<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bbb="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/book_panel_bg"
    android:orientation="vertical">

    <com.blinkboxbooks.android.widget.BookCover
        android:id="@+id/bookcover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        bbb:showCoverText="true"
        bbb:showDownloadStateIcons="true"
        bbb:showComingSoon="false"/>

    <ProgressBar
        android:id="@+id/progressbar_read"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/gap_small"
        android:layout_marginLeft="@dimen/gap_small"
        android:layout_marginRight="@dimen/gap_small"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:progressDrawable="@drawable/library_progressbar_states"/>

    <com.blinkboxbooks.android.widget.BBBTextView
        style="@style/TextStyle.Title1"
        android:id="@+id/btn_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_small"
        android:layout_marginBottom="@dimen/gap_medium"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/brand_purple"
        android:text="@string/button_options" />
</LinearLayout>