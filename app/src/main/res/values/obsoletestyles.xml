<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Coverflow">
        <item name="unselectedAlpha">1</item>
        <item name="unselectedSaturation">0</item>
        <item name="unselectedScale">0</item>
        <item name="maxRotation">0</item>
        <item name="scaleDownGravity">1</item>
    </style>

    <style name="PopUpInformation">
        <item name="android:textColor">@color/button_white_text_color</item>
        <item name="android:textSize">@dimen/pop_up_font_size</item>
        <item name="fontName">@string/font_opensans_regular</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SplashScreen" parent="BBBTheme">
        <item name="android:windowBackground">@color/brand_purple</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="Transparent" parent="BBBTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>