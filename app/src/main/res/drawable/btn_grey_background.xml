<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@integer/state_transition_duration"
    android:exitFadeDuration="@integer/state_transition_duration" >
    <!-- For some inexplicable reason the alert dialog button that we set the background on seem to start in the disabled
         state regardless of what we do, so this is a horrible hack to workaround this -->
    <item android:state_enabled="false" android:drawable="@drawable/btn_grey_normal" />
    <item android:state_pressed="true" android:drawable="@drawable/btn_grey_pressed" />
    <item android:drawable="@drawable/btn_grey_normal" />
</selector>